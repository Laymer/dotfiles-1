#!/bin/sh

cd ~/Dropbox/blog

tmux start-server

tmux new-session -d -s blog -n vim
tmux split-window -t blog:rails -h

tmux new-window -t blog:2 -n jekyll

tmux send-keys -t blog:vim "vim" C-m
tmux send-keys -t blog:jekyll "rvm use 2.1.2 do jekyll serve --watch" C-m

tmux select-window -t blog:vim

tmux attach-session -d -t blog

